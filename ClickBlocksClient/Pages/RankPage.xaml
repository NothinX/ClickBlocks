<Page x:Class="ClickBlocksClient.RankPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClickBlocksClient"
      mc:Ignorable="d" 
      d:DesignHeight="537.5" d:DesignWidth="350"
      Title="排行" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ComboBox Name="RankModeCbBox" FontSize="17" Grid.Row="0" Grid.Column="0" Margin="5 2.5 5 2.5" SelectionChanged="RankModeCbBox_SelectionChanged"/>
        <ComboBox Name="RankRangeCbBox" FontSize="17" Grid.Row="0" Grid.Column="1" Margin="5 2.5 5 2.5" SelectionChanged="RankRangeCbBox_SelectionChanged"/>
        <ListBox Name="RankList" Grid.Row="1" Grid.ColumnSpan="2" Margin="5 10 5 0" Style="{DynamicResource listBox}">

        </ListBox>
    </Grid>
</Page>
